{
  "plugins": {
    "pzlua": true
  },
  "rules": {
    "@textlint-ja/textlint-rule-no-dropping-i": true,
    "@textlint-ja/textlint-rule-no-insert-dropping-sa": true,
    "@textlint-ja/textlint-rule-no-insert-re": true,
    "no-double-negative-ja": true,
//    "no-doubled-joshi": true,
    "no-dropping-the-ra": true,
    "no-mixed-zenkaku-and-hankaku-alphabet": true,
    "no-nfd": true,
    "ja-no-redundant-expression": true,
    "ja-no-abusage": true,
    "ja-no-successive-word": {
      "allowOnomatopee": true,
      "allow": [
        "！"
      ]
    },
    "ja-unnatural-alphabet": true,
    "max-kanji-continuous-len": {
      "max": 7,
      "allow": ["倍精度浮動小数点数"]
    },
    "preset-jtf-style": {
      "1.1.1.本文": false,
      "1.1.2.見出し": false,
      "1.1.3.箇条書き": false,
      "1.1.5.図表のキャプション": false,
      "1.2.1.句点(。)と読点(、)": false,
      "1.2.2.ピリオド(.)とカンマ(,)": false,
      "2.1.5.カタカナ": false,
      "2.1.6.カタカナの長音": false,
      "2.1.8.算用数字": true,
      "2.1.9.アルファベット": true,
      "2.1.10.算用数字の位取りの表記": true,
      "2.2.1.ひらがなと漢字の使い分け": false,
      "2.2.2.算用数字と漢数字の使い分け": true,
      "2.2.3.一部の助数詞の表記": true,
      "3.1.1.全角文字と半角文字の間": false,
      "3.1.2.全角文字どうし": false,
      "3.2.カタカナ語間のスペースの有無": false,
      "3.3.かっこ類と隣接する文字の間のスペースの有無": false,
      "4.1.1.句点(。)": false,
      "4.1.3.ピリオド(.)、カンマ(,)": false,
      "4.2.1.感嘆符(！)": false,
      "4.2.2.疑問符(？)": false,
      "4.2.4.中黒(・)": false,
      "4.2.5.波線(〜)": false,
      "4.2.6.ハイフン(-)": false,
      "4.2.7.コロン(：)": false,
      "4.2.8.セミコロン(;)": true,
      "4.2.9.ダッシュ(-)": false,
      "4.3.1.丸かっこ（）": false,
      "4.3.2.大かっこ［］": false,
      "4.3.3.かぎかっこ「」": true,
      "4.3.4.二重かぎかっこ『』": true,
      "4.3.5.二重引用符": true,
      "4.3.6.中かっこ{ }": false,
      "4.3.7.山かっこ<>": false,
      "4.3.8.一重引用符": true
    }
  },
  "filters": {
    "allowlist": {
      "allow": [
//        "ignored-word",
//        "/\\d{4}-\\d{2}-\\d{2}/",
//        "/===IGNORE===[\\s\\S]*?===\/IGNORE===/m"
      ]
    }
  }
}
